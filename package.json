{
  "name": "io-library",
  "version": "0.0.6",
  "description": "IO component library",
  "author": "orlovssky",
  "keywords": [
    "io",
    "component library",
    "components"
  ],
  "license": "ISC",
  "files": [
    "dist"
  ],
  "main": "./dist/io-lib.umd.js",
  "module": "./dist/io-lib.es.js",
  "exports": {
    ".": {
      "import": "./dist/io-lib.es.js",
      "require": "./dist/io-lib.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build && vue-tsc --emitDeclarationOnly && mv dist/src dist/types"
  },
  "dependencies": {
    "vue": "^3.2.31"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "@vitejs/plugin-vue": "^2.2.4",
    "@vue/cli-plugin-eslint": "^5.0.1",
    "eslint": "^8.10.0",
    "eslint-plugin-arca": "^0.15.0",
    "eslint-plugin-vue": "^8.5.0",
    "sass": "^1.49.9",
    "sass-loader": "^12.6.0",
    "typescript": "^4.6.2",
    "vite": "^2.8.5",
    "vue-eslint-parser": "^8.3.0",
    "vue-tsc": "^0.32.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "vue/setup-compiler-macros": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/vue3-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "parser": "@typescript-eslint/parser",
      "sourceType": "module"
    },
    "plugins": [
      "vue",
      "@typescript-eslint",
      "arca"
    ],
    "rules": {
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1,
          "maxEOF": 1
        }
      ],
      "quotes": [
        2,
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2
      ],
      "arca/import-align": 2,
      "arca/import-ordering": 2,
      "arca/newline-after-import-section": 2
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
